version: "3.3"

services:
  jenkins:
   image: jenkins/jenkins:lts-jdk17
   privileged: true
   container_name: jenkins
   user: root
   ports:
     - "8080:8080"
     - "50000:50000"
   
   volumes:
     - /home/jimbo/jenkins_home:/var/jenkins_home
     - /var/run/docker.sock:/var/run/docker.sock

   expose:
     - 4444
